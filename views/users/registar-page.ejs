<%- include('../userlayout/header.ejs') %>
<!doctype html>
<html lang="en">
  <head>
  	<title>Sign up</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  </head>
  <header>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container">
		<h1>ESSENCE</h1>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
          aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ml-auto">
            <li class="nav-item active">
              <a class="nav-link" href="/home-page">Home</a>
            </li>
            <li class="nav-item active">
              <a class="nav-link" href="/login">Log in</a>
            </li>
           
          </ul>
        </div>
      </div>
    </nav>
  </header>
  
  <body class="img js-fullheight" style="background-image: url(/adminAssets/images/carousel/banner_1.jpg);">
    <section class="ftco-section">
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-md-6 text-center ">
            <h2 class="heading-section">Sign up</h2>
          </div>
        </div>
        <div class="row justify-content-center">
          <div class="col-md-6 col-lg-4 text-light">
            <div class="login-wrap p-0">
              <h3 class="mb-4 text-center">Create an account?</h3>
              <form action="/register" method="post" class="signin-form">
                <div class="form-group">
                  <input type="text" class="form-control text-light" placeholder="Your name" name="name" required>
                </div>
                <div class="form-group">
                  <input type="email" class="form-control text-light" placeholder="Your email" name="email" required>
                </div>
                <div class="form-group">
                  <input type="text" class="form-control text-light" placeholder="Your mobile" name="mno" required>
                </div>
                <div class="form-group">
                  <input id="password-field" type="password" class="form-control text-light" placeholder="Password" name="password" required>
                  <span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                </div>
                <div class="form-group">
                  <input id="password-field" type="password" class="form-control text-light" placeholder="re enter your Password" name="passwordConfirm" required>
                  <span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                </div>
                <div class="form-group">
                  <button type="submit" class="form-control btn btn-primary px-3">SUBMIT</button>
                </div>
              </form>
              <div class="form-group d-md-flex">
                <div class="text-md-center">
                  <h6><a href="/login" style="color: #fff;">Already have an account? <span class="text-primary">Sign In</span> </a></h6>
                </div>
              </div>
              <% if (typeof message !== 'undefined') { %>
                <span class="text-danger">
                  <%= message %>
                </span>
              <% } %>
              
            </div>
          </div>
        </div>
      </div>
    </section>
    <footer class="bg-light text-center">
      <div class="container">
        <div class="row">
          <div class="col-md-12">
            <p>&copy; 2023 Essence Commercial. All Rights Reserved.</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
